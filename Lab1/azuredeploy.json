{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageName": {
            "type": "string",
            "minLength": 1
        },
        "storageKind": {
            "type": "string",
            "allowedValues": [
                "BlobStorage",
                "BlockBlobStorage",
                "FileStorage",
                "Storage",
                "StorageV2"
            ],
            "minLength": 1
        },
        "storageSKU": {
            "type": "string",
            "allowedValues": [

                "Premium_LRS",
                "Premium_ZRS",
                "Standard_GRS",
                "Standard_GZRS",
                "Standard_LRS",
                "Standard_RAGRS",
                "Standard_RAGZRS",
                "Standard_ZRS"
            ],
            "minLength": 1,
            "metadata": {
                "description": "SKU for storage account"
            }
        },
        "webAppName": {
            "type": "string",
            "minLength": 1
        }
    },

    "functions": [],
    "variables": {
        "storageNameUniq": "[concat(parameters('storageName'), uniqueString(resourceGroup().id))]",
        "webAppNameUniq": "[concat(parameters('webAppName'),  uniqueString(resourceGroup().id))]"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-06-01",
            "name": "[variables('storageNameUniq')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "[parameters('storageSKU')]"
            },
            "kind": "[parameters('storageKind')]"

        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "name": "[variables('webAppNameUniq')]",
            "location": "[resourceGroup().location]",
            "kind": "app",
            "dependsOn": [
                //"[resourceId('Microsoft.Web/serverfarms', variables('webAppNameUniq'))]"
            ],
            "properties": {
               // "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('webAppNameUniq'))]"
            }

        }
    ],
    "outputs": {
        "output1": {
            "type": "string",
            "value": "Succeeded"
        }
    }
}